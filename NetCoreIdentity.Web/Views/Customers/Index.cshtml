@using NetCoreIdentity.Web.Paginations
@model PaginatedList<NetCoreIdentity.Model.Customer>

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content">
    <form class="filter-block" asp-action="Index" method="get">

        <div class="filter-field">
            <span class="title">Find</span>
            <input type="text" name="Keyword" value="@ViewBag.Keyword" placeholder="text keyword here" />
        </div>
        <div class="filter-field" style="vertical-align:bottom">
            <button class="btn btn-03"><i class="lni-search"></i></button>
        </div>

    </form>

    <div class="table-wrap">
        <p>
            <a asp-action="Create" class="btn btn-03 add-btn">Create</a>
        </p>

        <table class="footable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().NameStyle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Title)
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortName="FirstName"
                           asp-route-sortOrder="@(ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")"
                           asp-route-pageNum="@(Model.PageIndex)"
                           asp-route-keyword="@ViewBag.Keyword">
                            @Html.DisplayNameFor(model => model.First().FirstName)
                        </a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().MiddleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Suffix)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().SalesPerson)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Phone)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameStyle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Suffix)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesPerson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>

                        <td>
                            <a class="btn btn-03" asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a>
                            <a class="btn btn-07" asp-action="Details" asp-route-id="@item.CustomerId">Details</a>
                            <a class="btn btn-02" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
      
        <partial name="_PagingnationPartial" />
    </div>
</div>

